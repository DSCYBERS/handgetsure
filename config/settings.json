{
    "camera": {
        "camera_index": 0,
        "frame_width": 640,
        "frame_height": 480,
        "fps": 30,
        "auto_exposure": true,
        "brightness": 0.5,
        "contrast": 0.5
    },
    "hand_detection": {
        "max_num_hands": 2,
        "min_detection_confidence": 0.7,
        "min_tracking_confidence": 0.5,
        "static_image_mode": false
    },
    "gesture_recognition": {
        "motion_buffer_size": 10,
        "min_stability_frames": 3,
        "pinch_threshold": 0.03,
        "swipe_threshold": 0.1,
        "gesture_cooldown": 0.5
    },
    "visualization": {
        "show_landmarks": true,
        "show_connections": true,
        "show_gesture_info": true,
        "show_confidence": true,
        "show_motion_trail": false,
        "show_fps": true,
        "window_name": "Hand Gesture Control"
    },
    "commands": {
        "enable_mouse_control": true,
        "enable_system_commands": true,
        "command_cooldown": 0.5,
        "mouse_smoothing": 0.3,
        "volume_step": 5,
        "scroll_sensitivity": 3
    },
    "debug_mode": false,
    "log_level": "INFO"
}